<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>articles</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>DublinCoreRestSearch</display-name>
    <servlet-name>DublinCoreRestSearch</servlet-name>
    <servlet-class>br.ufal.ic.articles.servlet.DublinCoreRestSearch</servlet-class>
  </servlet>
  <filter>
  	<filter-name>HibernateFilter</filter-name>
  	<filter-class>br.ufal.ic.articles.filter.HibernateFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>HibernateFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>DublinCoreRestSearch</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
</web-app>